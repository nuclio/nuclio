FROM debian:jessie-slim

RUN apt-get update
RUN apt-get install -y \
    bzip2 \
    curl \
    libexpat1 \
    sqlite3

RUN curl -LO https://bitbucket.org/pypy/pypy/downloads/pypy2-v5.9.0-linux64.tar.bz2
RUN tar xjf pypy2-v5.9.0-linux64.tar.bz2
RUN rm pypy2-v5.9.0-linux64.tar.bz2
RUN mv pypy2-v5.9.0-linux64 /opt/pypy
RUN ln -s /opt/pypy/bin/pypy /usr/local/bin
RUN ln -s /opt/pypy/bin/libpypy-c.so /usr/local/lib/
